<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDCFCF"
    android:backgroundTint="#DCCECE"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/first_question"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="10sp"
        android:text="copyrights depreciate over time"
        android:textColor="#131313"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/custom_T"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:text="nice quiz" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#AAA7A7"
        android:gravity="center">

        <Button
            android:id="@+id/false_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:backgroundTint="#807F7F"
            android:gravity="center"
            android:text="False" />

        <Button
            android:id="@+id/true_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:backgroundTint="#807F7F"
            android:gravity="center"
            android:text="True" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:layout_margin="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="do you want ti cheat"
            android:textColor="#0E0E0E"
            android:textSize="16sp" />

        <Button
            android:id="@+id/Answer"
            android:layout_width="143dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#BDBCBC"
            android:gravity="center"
            android:text="Yes" />

    </LinearLayout>

    <Button
        android:id="@+id/nixt_btn"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#807F7F"

        android:text="Nixt" />

    <Button
        android:id="@+id/pre_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"

        android:backgroundTint="#807F7F"

        android:text="previous" />

    <TextView
        android:id="@+id/instructor_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="#1C1C1C"
        android:textSize="16sp"
        tools:text="writter by rwan" />

</LinearLayout>